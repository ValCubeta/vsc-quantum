{
	"comments": {
		"lineComment": "//",
		"blockComment": ["/*", "*/"]
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	"autoClosingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["\"", "\""]
	],
	"surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["\"", "\""],
		[":", ";"]
	],
	"onEnterRules": [
		{
			"beforeText": "(?:(?:fun|class|with|if|when|otherwise|for|foreach|while)\\s*[^\\s]+|(?:else|try)\\s*):\\s*$",
			"action": {
				"indent": "indent"
			}
		}
	]
}