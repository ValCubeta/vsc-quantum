{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Quantum",
	"scopeName": "source.qua",
	"patterns": [
		{
			"include": "#main"
		}
	],
	"repository": {
		"main": {
			"patterns": [
				{
					"name": "comment.line.qua",
					"begin": "//",
					"end": "\\n"
				},
				{
					"name": "comment.block.qua",
					"begin": "/\\*",
					"end": "\\*/"
				},
				{
					"name": "constant.numeric.qua",
					"match": "(?<![a-z_A-Z.])[0-9]+(?:'[0-9]+)*(?:\\.[0-9])?(?:[eE][-+][0-9]+)?(?![a-z_A-Z])"
				},
				{
					"name": "keyword.operator.type.annotation.qua meta.type.annotation.qua",
					"match": ":"
				},
				{
					"name": "keyword.operator.qua",
					"match": "[-+/*|]|[=!<>]=?|\\?|\\.{3}",
					"comment": "- | + | / | * | '|' | == | != | >= | <= | ! | > | < | ? | ..."
				},
				{
					"name": "punctuation.accessor.qua keyword.operator.accessor.qua",
					"match": "\\."
				},
				{
					"name": "keyword.operator.assignment.qua",
					"match": "[+]?=",
					"comment": "+= | -= | ="
				},
				{
					"name": "keyword.other.import.qua",
					"match": "(?<![a-z_A-Z.])(?:import|from)(?![a-z_A-Z])"
				},
				{
					"name": "keyword.qua",
					"match": "(?<![a-z_A-Z.])(?:if|unless|or|when|is|else|try|catch|then|return|throw)(?![a-z_A-Z])"
				},
				{
					"name": "support.class.builtin.qua",
					"match": "(?<![a-z_A-Z.])(?:any|void|bool|num|str|obj|arr|regexp)(?![a-z_A-Z])"
				},
				{
					"name": "support.function.builtin.qua",
					"match": "(?<![a-z_A-Z.])(?:bool|num|str|obj|arr|regexp)(?=\\s*\\()"
				},
			]
		}
	}
}